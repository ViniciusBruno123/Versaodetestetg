@model PCPMetalurgicaInter.Models.Peca
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Impressão Desenho Técnico</title>
    <style>
        body { font-family: sans-serif; text-align: center; margin: 50px; }
        img { max-width: 100%; height: auto; border: 1px solid #000; }
        @@media print {
            .no-print { display: none; }
        }
    </style>
</head>
<body>
    <h1>Desenho Técnico – Peça @Model.Descricao (ID @Model.Id)</h1>
    <img src="@Url.Action("Imagem", "Peca", new { id = Model.Id })" alt="Desenho Técnico" />
    <div class="no-print mt-3">
        <button onclick="window.print()">Imprimir</button>
    </div>
</body>
</html>
